{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Serviços",
    "version": "1.0.0",
    "description": "Uma api para negociação de serviços entre cliente e Médicos",
    "contact": {
      "name": "Weslley Henrique Vieira Ferraz",
      "email": "weslleyhenrique800@gmail.com",
      "url": "https://engenheirosoftwareweslley.com.br/"
    }
  },
  "tags": [
    {
      "name": "Doctors",
      "description": "Gerenciamento de Doutores"
    }
  ],
  "paths": {
    "/doctors": {
      "post": {
        "tags": ["Doctors"],
        "summary": "Criar um novo doutor",
        "operationId": "createDoctor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Dr. John Doe"
                  },
                  "phone": {
                    "type": "string",
                    "example": "+5565981233996"
                  },
                  "email": {
                    "type": "string",
                    "example": "john.doe@example.com"
                  },
                  "cpf": {
                    "type": "string",
                    "example": "12345678909"
                  },
                  "birthday": {
                    "type": "string",
                    "format": "date",
                    "example": "1980-01-01"
                  },
                  "password": {
                    "type": "string",
                    "example": "securepassword"
                  },
                  "CRM": {
                    "type": "string",
                    "example": "123456789"
                  },
                  "specialty": {
                    "type": "string",
                    "example": "Cardiology"
                  }
                },
                "required": [
                  "name",
                  "phone",
                  "email",
                  "cpf",
                  "birthday",
                  "password",
                  "CRM",
                  "specialty"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Doutor criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "1"
                    },
                    "name": {
                      "type": "string",
                      "example": "Dr. John Doe"
                    },
                    "phone": {
                      "type": "string",
                      "example": "+5565981233996"
                    },
                    "email": {
                      "type": "string",
                      "example": "john.doe@example.com"
                    },
                    "cpf": {
                      "type": "string",
                      "example": "12345678909"
                    },
                    "birthday": {
                      "type": "string",
                      "format": "date",
                      "example": "1980-01-01"
                    },
                    "CRM": {
                      "type": "string",
                      "example": "123456789"
                    },
                    "specialty": {
                      "type": "string",
                      "example": "Cardiology"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Input Invalido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Doutor já existe"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
